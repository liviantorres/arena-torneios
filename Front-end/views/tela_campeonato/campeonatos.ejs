    align-items: center;
  }

  #overlay200 {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
  }

  .imagem {
    width: 130px;
    height: 125px;
    border-radius: 5px;
    background-color: white;

  }

  .info {
    padding: 10px;
    background-color: #333361;
  }

  .fundoimagem {
    background-color: #333361;
    height: 160px;
    padding: 20px;
  }
</style>


